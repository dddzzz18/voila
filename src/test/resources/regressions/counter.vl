primitive_atomic bool CAS(int* x, int now, int thn)
  requires x |-> ?v;
  ensures  v == now
              ? ret && x |-> thn
              : !ret && x |-> v;

abstract_atomic void incr(id c, int* x)
  interference ?n in Nat on c;
  requires Counter(c, x, n) && G@c;
  ensures Counter(c, x, n + 1) && G@c;
{
  int r;
  bool b;

  make_atomic
    using Counter(c, x) with G@c;
  {
    (open_region
      using Counter(c, x);
    {
      r := *x;
    }

    update_region
      using Counter(c, x);
    {
      b := CAS(x, r, r + 1);
    });

    while (!b)
      invariant true;
    {
      (open_region
        using Counter(c, x);
      {
        r := *x;
      }

      update_region
        using Counter(c, x);
      {
        b := CAS(x, r, r + 1);
      });
    }
  }
}

abstract_atomic void wkincr(id c, int* x)
  interference ?n in Set[int](n) on c;
  requires Counter(c, x, n) && G@c;
  ensures Counter(c, x, n + 1) && G@c;
{
  int r;

  make_atomic
    using Counter(c, x) with G@c;
  {
    open_region
      using Counter(c, x);
    {
      r := *x;
    }

    update_region
      using Counter(c, x);
    {
      *x := r + 1;
    }
  }
}