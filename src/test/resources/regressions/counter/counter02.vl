region SeqCounter(id k, id c, memcell x)
  guards {
    unique S;
  }
  interpretation {
    Counter(c, x, ?n) && G@c
  }
  state { n }
  actions {
    S: ?m ~> Int;
  }

region ParCounter(id k, id c, memcell x)
  guards {
    duplicable P;
  }
  interpretation {
    Counter(c, x, ?n) && G@c
  }
  state { n }
  actions {
    P: ?m ~> Int;
  }

procedure read01_seqclient01(id k, id c, memcell x) returns (int ret)
  requires SeqCounter(k, c, x) && S@k;
  ensures  SeqCounter(k, c, x) && S@k;
{
  skip;
  skip;

  use_atomic
    using SeqCounter(k, c, x) with S@k;
  {
    ret := read01(c, x); // CALL OK
  }
}

