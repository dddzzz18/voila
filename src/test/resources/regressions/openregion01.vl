struct memcell {
  int f;
}

region Counter(id c, memcell x)
  guards { duplicable G; }
  interpretation {
    x.f |-> ?n
  }
  state { n }
  actions {
    G: ?m ~> Int;
  }

abstract_atomic procedure test01(id c, memcell x) returns (int ret)
  interference ?n in Int on c;
  requires Counter(c, x, n) && G@c;
{
  //:: ExpectedOutput(open-region_error:illegal_state_change_error)
  open_region
    using Counter(c, x);
  {
    x.f := n + 1;
  }
}

abstract_atomic procedure test02(id c, memcell x) returns (int ret)
  interference ?n in Int on c;
  requires Counter(c, x, n) && G@c;
{
  open_region
    using Counter(c, x);
  {
    x.f := n;
  }
}
